#!/bin/sh
FORMAT=$(echo -e "\033[1;33m%w%f\033[0m written")
"$@"
while true
do
    # gvim writes a file named 4913 to test if it has write permissions in the
    # directory, so ignore writes to that file
    if inotifywait -qre close_write --format "$FORMAT" . | grep -v './4913'
    then "$@"
    fi
done
